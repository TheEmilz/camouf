{
  "name": "test-fixtures",
  "root": ".",
  "languages": [
    "typescript"
  ],
  "layers": [
    {
      "name": "client",
      "type": "presentation",
      "directories": [
        "client"
      ],
      "allowedDependencies": ["shared"]
    },
    {
      "name": "server",
      "type": "application",
      "directories": [
        "server"
      ],
      "allowedDependencies": ["shared"]
    },
    {
      "name": "shared",
      "type": "shared",
      "directories": [
        "shared",
        "ai-errors"
      ],
      "allowedDependencies": []
    }
  ],
  "directories": {
    "client": ["client"],
    "server": ["server"],
    "shared": [
      "shared",
      "ai-errors"
    ]
  },
  "rules": {
    "builtin": {
      "layer-dependencies": "error",
      "circular-dependencies": "error",
      "performance-antipatterns": "error",
      "type-safety": "error",
      "function-signature-matching": "error",
      "inconsistent-casing": "warn",
      "ai-hallucinated-imports": "error",
      "orphaned-functions": "warn",
      "context-drift-patterns": "warn",
      "phantom-type-references": "warn"
    }
  },
  "patterns": {
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx",
      "**/*.mts",
      "**/*.cts"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/.git/**",
      "**/coverage/**"
    ]
  }
}