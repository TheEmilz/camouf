{
  "name": "test-fixtures",
  "root": ".",
  "languages": ["typescript"],
  "layers": [
    {
      "name": "shared",
      "type": "shared",
      "directories": ["shared"],
      "allowedDependencies": []
    },
    {
      "name": "client",
      "type": "presentation",
      "directories": ["client"],
      "allowedDependencies": ["shared"]
    },
    {
      "name": "server",
      "type": "application",
      "directories": ["server"],
      "allowedDependencies": ["shared"]
    }
  ],
  "directories": {
    "shared": ["shared"],
    "client": ["client"],
    "server": ["server"]
  },
  "rules": {
    "builtin": {
      "function-signature-matching": "error",
      "contract-mismatch": "error",
      "ai-hallucinated-imports": "error",
      "phantom-type-references": "warn",
      "inconsistent-casing": "warn",
      "orphaned-functions": "warn",
      "context-drift-patterns": "warn",
      "layer-dependencies": "warn",
      "circular-dependencies": "warn",
      "type-safety": "warn",
      "performance-antipatterns": "off",
      "hardcoded-secrets": "warn",
      "async-discrepancies": "warn",
      "security-context": "off"
    }
  },
  "patterns": {
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["**/node_modules/**", "**/dist/**", "**/demo/**", "**/ai-errors/**"]
  }
}
